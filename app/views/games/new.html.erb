<h1>Longest World Game</h1>
<p><%@letters.each do |letter|%>
  <div><%=letter%></div>
  <%end%>

</p>


<br>

<form action="/new" method="post">
  <label>What is the longest word you can find?</label>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="Enter longest word">
  <input type="submit" value="Play!" class = btn>
</form>
